<local:CWindow x:Class="ModCreator.Windows.PatternSelectorWindow" x:TypeArguments="localData:PatternSelectorWindowData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:ModCreator.Windows"
        xmlns:localData="clr-namespace:ModCreator.WindowData" xmlns:helpers="clr-namespace:ModCreator.Helpers"
        xmlns:converter="clr-namespace:ModCreator.Converters" xmlns:controls="clr-namespace:ModCreator.Controls" mc:Ignorable="d"
        Title="{x:Static helpers:PatternSelectorWindowText.WindowTitle}" Height="900" Width="1500" WindowStartupLocation="CenterOwner"
        Icon="/Resources/app-icon.png" FontFamily="Segoe UI">
    <Window.Resources>
        <converter:TextBoxVisibilityConverter x:Key="TextBoxVisibilityConverter"/>
        <converter:ComboBoxVisibilityConverter x:Key="ComboBoxVisibilityConverter"/>
        <converter:MultiComboBoxVisibilityConverter x:Key="MultiComboBoxVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#FF2E5090" Padding="15">
            <TextBlock Text="{x:Static helpers:PatternSelectorWindowText.WindowTitle}" FontSize="18" FontWeight="Bold" Foreground="White"/>
        </Border>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{x:Static helpers:PatternSelectorWindowText.SearchIcon}" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" BorderBrush="#FFCCCCCC" BorderThickness="1" FontSize="13" Style="{StaticResource SearchTextBox}" helpers:TextBoxBehaviors.Placeholder="{x:Static helpers:PatternSelectorWindowText.SearchPlaceholder}"/>
        </Grid>
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <GroupBox Grid.Row="0" Header="{x:Static helpers:PatternSelectorWindowText.Prefix}" Margin="0,0,10,5">
                    <TextBox Text="{Binding Prefix, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Padding="5" VerticalContentAlignment="Center"/>
                </GroupBox>
                <GroupBox Grid.Row="1" Header="{x:Static helpers:PatternSelectorWindowText.SelectPattern}" Margin="0,0,10,0">
                    <ListBox ItemsSource="{Binding FilteredPatterns}" SelectedItem="{Binding SelectedPattern, Mode=TwoWay}" DisplayMemberPath="Name" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </GroupBox>
            </Grid>
            <GroupBox Grid.Column="1" Header="{x:Static helpers:PatternSelectorWindowText.PatternDetails}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding SelectedPattern.Description}" TextWrapping="Wrap" FontSize="13" Margin="0,0,0,10" Foreground="Gray"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding DisplayFiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <GroupBox Header="{Binding FileName}" Margin="0,0,0,10" BorderBrush="#FF2E5090" BorderThickness="2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto">
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Button Grid.Column="0" Content="{x:Static helpers:PatternSelectorWindowText.AddRow}" Click="AddRow_Click" Tag="{Binding}" Margin="0,0,5,0" Padding="10,5" Background="#FF2E5090" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                                        <ItemsControl Grid.Column="1" ItemsSource="{Binding DisplayElements}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel Orientation="Horizontal"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border BorderBrush="#FFCCCCCC" BorderThickness="0,0,1,1" Padding="5" MinWidth="150" MaxWidth="150" Background="#FFE8EAF6">
                                                                        <TextBlock Text="{Binding Label}" TextAlignment="Center" FontWeight="SemiBold"/>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </Grid>
                                                    <ItemsControl ItemsSource="{Binding Rows}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Button Grid.Column="0" Content="{x:Static helpers:PatternSelectorWindowText.RemoveRow}" Click="RemoveRow_Click" Tag="{Binding}" Margin="0,0,5,0" Padding="10,5" Background="#FFCC0000" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                                                    <ItemsControl Grid.Column="1" ItemsSource="{Binding Bindings}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="Horizontal"/>
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <Border BorderBrush="#FFCCCCCC" BorderThickness="0,0,1,1" Padding="5" MinWidth="150" MaxWidth="150">
                                                                                    <Grid>
                                                                                        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0" Padding="0" VerticalContentAlignment="Center" Visibility="{Binding Element.Type, Converter={StaticResource TextBoxVisibilityConverter}}" IsReadOnly="{Binding Element.IsReadOnly}">
                                                                                            <TextBox.Style>
                                                                                                <Style TargetType="TextBox">
                                                                                                    <Style.Triggers>
                                                                                                        <Trigger Property="IsReadOnly" Value="True">
                                                                                                            <Setter Property="Background" Value="#FFF0F0F0"/>
                                                                                                            <Setter Property="Foreground" Value="#FF666666"/>
                                                                                                        </Trigger>
                                                                                                    </Style.Triggers>
                                                                                                </Style>
                                                                                            </TextBox.Style>
                                                                                        </TextBox>
                                                                                        <ComboBox ItemsSource="{Binding Element.Options}" SelectedValue="{Binding Value, Mode=TwoWay}" SelectedValuePath="Value" DisplayMemberPath="DisplayName" BorderThickness="0" Padding="0" VerticalContentAlignment="Center" Visibility="{Binding Element.Type, Converter={StaticResource ComboBoxVisibilityConverter}}" DropDownOpened="ComboBox_DropDownOpened" Tag="{Binding}"/>
                                                                                        <controls:MultiSelectComboBox ItemsSource="{Binding Element.Options}" SelectedValue="{Binding Value, Mode=TwoWay}" Separator="{Binding Element.Separator}" Visibility="{Binding Element.Type, Converter={StaticResource MultiComboBoxVisibilityConverter}}" Tag="{Binding}" DropDownOpened="MultiSelectComboBox_DropDownOpened"/>
                                                                                    </Grid>
                                                                                </Border>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </ScrollViewer>
                                        </Grid>
                                    </GroupBox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="{x:Static helpers:PatternSelectorWindowText.Save}" Click="Save_Click" Style="{StaticResource PrimaryButton}" Width="100" IsEnabled="{Binding HasSelectedPattern}"/>
            <Button Content="{x:Static helpers:PatternSelectorWindowText.Cancel}" Click="Cancel_Click" Style="{StaticResource ActionButton}" Width="100" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</local:CWindow>
