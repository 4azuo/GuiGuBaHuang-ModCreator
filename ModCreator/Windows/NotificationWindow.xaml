<local:CWindow x:Class="ModCreator.Windows.NotificationWindow" x:TypeArguments="localData:NotificationWindowData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ModCreator.Windows"
        xmlns:localData="clr-namespace:ModCreator.WindowData"
        mc:Ignorable="d" 
        Title="Notification" Height="450" Width="700" WindowStartupLocation="CenterOwner"
        Icon="/Resources/app-icon.png" FontFamily="Segoe UI" ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{Binding HeaderBackground}" Padding="15">
            <StackPanel>
                <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{Binding Subtitle}" FontSize="12" Foreground="#FFEEEEEE" Margin="0,5,0,0" Visibility="{Binding HasSubtitle, Converter={StaticResource BoolToVisConverter}}"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
            <StackPanel>
                <!-- Simple message -->
                <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="14" Visibility="{Binding IsSimpleMessage, Converter={StaticResource BoolToVisConverter}}"/>
                
                <!-- Details list -->
                <ItemsControl ItemsSource="{Binding Details}" Visibility="{Binding HasDetails, Converter={StaticResource BoolToVisConverter}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#FFCCCCCC" BorderThickness="0,0,0,1" Padding="5" Margin="0,2">
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="13"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
            <Button Content="OK" Click="OK_Click" Style="{StaticResource PrimaryButton}" Width="100" IsDefault="True"/>
            <Button Content="Cancel" Click="Cancel_Click" Style="{StaticResource ActionButton}" Width="100" Margin="10,0,0,0" Visibility="{Binding ShowCancel, Converter={StaticResource BoolToVisConverter}}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</local:CWindow>
